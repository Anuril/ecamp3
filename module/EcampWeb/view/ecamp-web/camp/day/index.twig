{% extends 'ecamp-web/camp/camp.twig' %}


{% block content2 %}

	<div class="row">

		<div class="col-sm-4 col-md-3">
			<div class="panel-group" id="periodsAccordion">

			  {% for period in periods %}

				  <div class="panel panel-default">
				    {% if day.period == period %}
					    <a class="accordion-toggle" data-toggle="collapse" data-parent="#periodsAccordion" href="#{{ period.id }}">
						    <div class="panel-heading">
						      <h4 class="panel-title">
						          <i class="icon-accordion"></i>
						          {{ period.description }}
						      </h4>
						    </div>
					    </a>
					<div id="{{ period.id }}" class="panel-collapse collapse in">
				    {% else %}
				    	<a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#periodsAccordion" href="#{{ period.id }}">
						    <div class="panel-heading">
						      <h4 class="panel-title">
						          <i class="icon-accordion"></i>
						          {{ period.description }}
						      </h4>
						    </div>
					    </a>
				    <div id="{{ period.id }}" class="panel-collapse collapse">
				    {% endif %}
				      <div class="panel-body" style="padding: 10px">
				        <ul class="nav nav-pills nav-stacked">
						{% for day_ in period.days %}
							{% if day == day_ %}
								<li class="active">
							{% else %}
								<li>
							{% endif %}
									<a 	style="padding-top: 5px; padding-bottom: 5px;"
										href="{{
										url('web/camp/default',
											{ 'camp': camp, 'controller': 'day', 'action': 'index' },
											{ 'query': { 'dayId': day_.id } })
										}}"
									>
										<center>
											{{ day_.getStart() | date("D :: d.m.Y") }}
										</center>
									</a>
								</li>
						{% endfor %}
						</ul>
				      </div>
				    </div>
				  </div>

			  {% endfor %}

			</div>
		</div>

		<div class="col-sm-8 col-md-9">

			{% embed "helper/accordion.twig" %}
				{% block panel_title %}
					Day {% if day %} - {{ day.start | date("d.m.Y") }} {% endif %}
				{% endblock %}
				{% block panel_content %}


				{% endblock %}
			{% endembed %}

		</div>
	</div>
{% endblock %}
