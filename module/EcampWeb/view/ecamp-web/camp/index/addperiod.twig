{% extends 'ecamp-web/camp/camp.twig' %}


{% block content2 %}

	<div class="row">
		<div class="col-sm-12">


			{% embed "helper/accordion.twig" %}
				{% block panel_title %}
					Periods
				{% endblock %}
				{% block panel_content %}
					<div class="col-sm-5">
						<table class="table table-striped table-hover">
							<thead>
							<tr>
								<th>Start</th>
								<th>End</th>
								<th>Description</th>
								<th> </th>
							</tr>
							</thead>
							<tbody>
							{% for period in camp.getPeriods %}
								<tr>
									<td>{{ period.getStart | date }}</td>
									<td>{{ period.getEnd | date}}</td>
									<td>{{ period.getDescription }}</td>
									<td></td>
								</tr>
							{% endfor %}
							</tbody>
						</table>

						<p>
							{{ form(form) }}
						</p>

					</div>
				{% endblock %}
			{% endembed %}
		</div>
	</div>
{% endblock %}
