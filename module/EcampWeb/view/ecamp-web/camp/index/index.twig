{% extends 'ecamp-web/camp/camp.twig' %}


{% block content2 %}

	<div class="row">
		<div class="col-sm-12">
			{% embed "helper/accordion.twig" %}
				{% block panel_title %}
					Infos
				{% endblock %}
				{% block panel_content %}
					<div class="col-sm-12">
						<p>Name:  {{ camp.getName }}</p>
						<p>Title: {{ camp.getTitle }}</p>
						<p>Motto: {{ camp.getMotto }}</p>
					</div>
				{% endblock %}
			{% endembed %}


			{% embed "helper/accordion.twig" %}
				{% block panel_title %}
					Periods
				{% endblock %}
				{% block panel_content %}
					<div class="col-sm-5">
						<table class="table table-striped table-hover">
							<thead>
							<tr>
								<th>Start</th>
								<th>End</th>
								<th>Description</th>
								<th> </th>
							</tr>
							</thead>
							<tbody>
							{% for period in camp.getPeriods %}
								<tr>
									<td>{{ period.getStart | date }}</td>
									<td>{{ period.getEnd | date}}</td>
									<td>{{ period.getDescription }}</td>
									<td></td>
								</tr>
							{% endfor %}
							</tbody>
						</table>

						<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalAddPeriod">+ Add Period</button>
						<p></p>

						<!-- Modal / Add Period -->
						  <div class="modal fade" id="modalAddPeriod" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
						    <div class="modal-dialog">
						      <div class="modal-content">
						        <form role="form" action="">
							        <div class="modal-header">
							          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							          <h4 class="modal-title">Add Period</h4>
							        </div>
							        <div class="modal-body">


										  <div class="form-group">
										    <label for="start">Start date</label>
										    <input type="date" class="form-control" id="start" placeholder="Choose start date">
										  </div>
										  <div class="form-group">
										    <label for="end">End date</label>
										    <input type="date" class="form-control" id="end" placeholder="Choose end date">
										  </div>

										 <div class="form-group">
										    <label for="description">Description</label>
										    <input type="text" class="form-control" id="description" placeholder="(Optional)">
										  </div>

							        </div>
							        <div class="modal-footer">
							          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
							          <button type="submit" class="btn btn-primary">Add Period</button>
							        </div>
							      </form>
						      </div><!-- /.modal-content -->
						    </div><!-- /.modal-dialog -->
						  </div><!-- /.modal -->

					</div>
				{% endblock %}
			{% endembed %}
		</div>
	</div>
{% endblock content2 %}
