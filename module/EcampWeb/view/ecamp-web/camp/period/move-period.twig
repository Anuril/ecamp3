<!-- Modal / Add Period -->
    <div class="modal-dialog">
        <div class="modal-content">
	        <div class="modal-header">
	          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	          <h4 class="modal-title">Move Period</h4>
	        </div>
	        <div class="modal-body">
				<div class="col-xs-12 alert alert-info">
					<p>
						The start of this period will be moved to a new date.
						<br />
						<br />
						If you check 'Keep events at date', then only the period will move,
						but all events of this period will stay at their date.
					</p>
				</div>
				<div class="col-xs-12">
					{{ form(form) }}
				</div>
	        </div>
	        <div class="modal-footer">
	          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
	          <button type="submit" form="asyncform-form" class="btn btn-primary">Save</button>
	        </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
